{
  "compilerOptions": {
    "lib": ["es2022"],
    "module": "ES6",
    "target": "es2022",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "removeComments": false,

    "outDir": "lib/es",
    "declaration": true
  },

  "include": ["src/**/*"]
}